<%
  const pageTitle = 'Ajouter un article';
  const activeNav = 'articles';
  const renderBody = function () {
%>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-6">
      <div class="card shadow-sm module-card border-0">
        <div class="card-body p-4">
          <h1 class="h4 text-primary mb-2">Ajouter un nouvel article</h1>
          <p class="text-muted mb-4">Complétez le formulaire ci-dessous pour enrichir le catalogue Pharma Max.</p>

          <form action="/articles/add" method="POST" class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label" for="code_article">Code article</label>
                <input type="text" class="form-control" id="code_article" name="code_article" required />
              </div>
              <div class="col-md-6">
                <label class="form-label" for="designation">Désignation</label>
                <input type="text" class="form-control" id="designation" name="designation" required />
              </div>
              <div class="col-md-6">
                <label class="form-label" for="stock">Stock disponible</label>
                <input type="number" min="0" class="form-control" id="stock" name="stock" required />
              </div>
              <div class="col-md-6">
                <label class="form-label" for="prix_unitaire">Prix unitaire (FCFA)</label>
                <input type="number" step="0.01" min="0" class="form-control" id="prix_unitaire" name="prix_unitaire" required />
              </div>
              <div class="col-12">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" role="switch" id="avec_tva" name="avec_tva" />
                  <label class="form-check-label" for="avec_tva">Article soumis à la TVA</label>
                </div>
              </div>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-2 gap-sm-3 mt-4">
              <button type="submit" class="btn btn-primary flex-grow-1">Enregistrer</button>
              <a class="btn btn-outline-secondary" href="/articles">Annuler</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<%
  };
%>

<%- include('layout', { pageTitle, renderBody, activeNav }) %>
